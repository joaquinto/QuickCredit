{
  "name": "QuickCredit",
  "version": "1.0.0",
  "description": "Quick Credit is an online lending platform that provides short term soft loans to individuals. This helps solve problems of financial inclusion as a way to alleviate poverty and empower low income earners.",
  "main": "./server/index.js",
  "scripts": {
    "build": "rimraf ./dist/ && babel server --out-dir dist",
    "start:dev": "nodemon --exec babel-node ./server/index.js",
    "start": "node dist/index.js",
    "test": "nyc mocha --timeout 5000 -r @babel/register server/test --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "coveralls": "nyc --reporter=lcov --reporter=text-lcov npm test",
    "refresh": "babel-node ./server/db/migrations dropTables && babel-node ./server/db/migrations createTables && babel-node ./server/db/seed seedDatas",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "@babel/runtime": "^7.4.4",
    "@hapi/joi": "^15.0.2",
    "@sendgrid/mail": "^6.4.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "jsonwebtoken": "^8.5.1",
    "make-runnable": "^1.3.6",
    "morgan": "^1.9.1",
    "pg": "^7.11.0",
    "dotenv": "^8.0.0",
    "swagger-jsdoc": "^3.2.9",
    "swagger-ui-express": "^4.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "babel-preset-airbnb": "^3.2.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "istanbul": "^0.4.5",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.11",
    "nyc": "^14.0.0",
    "rimraf": "^2.6.3"
  },
  "engines": {
    "node": "8.10.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joaquinto/QuickCredit.git"
  },
  "keywords": [
    "test",
    "travis",
    "coverage-badges"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/joaquinto/QuickCredit/issues"
  },
  "homepage": "https://github.com/joaquinto/QuickCredit#readme"
}
